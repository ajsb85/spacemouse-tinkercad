{
  "manifest_version": 2,
 
  "name": "Use SpaceMouse in TinkerCAD",
  "version": "0.3.0",
  "description": "Use SpaceMouse / SpaceNavigator devices in TinkerCAD. This script is unofficial and endorsed neither by Autodesk nor 3DConnexion.",
  
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },

  "permissions": [
          "storage"
  ],
		
  "content_scripts": [{
    "js": ["inject.js"],
    "matches": ["https://www.tinkercad.com/things/*/edit*"]
  }],

  "web_accessible_resources": [
    "content.js",
    "spacenav.js",
    "toast.js",
	"options.js"
  ]  
}